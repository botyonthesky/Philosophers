{
	"configurations": [
	{
		"name": "(gdb) philo",
		"type": "cppdbg",
		"request": "launch",
		"program": "${workspaceRoot}/philo",
		"args": [
			"6",
			"800",
			"200",
			"100",
			"2",
		],
		"stopAtEntry": false,
		"cwd": "${workspaceRoot}",
		"environment": [],
		"externalConsole": false,
		"MIMode": "gdb",
		"setupCommands": [
			{
				"description": "Enable pretty-printing for gdb",
				"text": "-enable-pretty-printing",
				"ignoreFailures": true
			},
			{
				"description": "Set Disassembly Flavor to Intel",
				"text": "-gdb-set disassembly-flavor intel",
				"ignoreFailures": true
			}
		],
		"preLaunchTask": "philo",
		// "postDebugTask": "after",
	}
	],
	"version": "2.0.0"
}